mixin triangle(triangleClass)
  svg(xmlns:xlink='http://www.w3.org/1999/xlink' xmlns='http://www.w3.org/2000/svg' class=`${triangleClass}` viewbox='0 0 1000 85' preserveaspectratio='none')
    polygon(points='0,0 0,86 500.8,86 500.8,78')
    polygon(points='1000,0 1000,86 500,86 500,78')
    

mixin icon(iconName, iconClass)
  svg(class=`${iconClass}`)
    use(xmlns:xlink='http://www.w3.org/1999/xlink' xmlns='http://www.w3.org/2000/svg' xlink:href=`./images/icons/sprite.svg#${iconName}`)

mixin image(imagePath, imageAlt, imageClass)
  img(src=`assets/images/${imagePath}`, alt=`${imageAlt}`, class=`${imageClass}`)
